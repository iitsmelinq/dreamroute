// Navigation
function showPage(id){
  document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
  document.getElementById(id).classList.add('active');
  if(id==='result') showResult();
  if(id==='inspiration') showInspiration();
}

// Submit Quiz
function submitQuiz(){
  const answers = questions.map((_,i)=>parseInt(document.getElementById('q'+i).value||0));
  const total = answers.reduce((a,b)=>a+b,0);
  localStorage.setItem('totalScore', total);
  showPage('result');
}

// Show Result
function showResult(){
  const total = parseInt(localStorage.getItem('totalScore')||0);
  let fac='‡∏≠‡∏±‡∏Å‡∏©‡∏£‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå', career='‡∏ô‡∏±‡∏Å‡πÅ‡∏õ‡∏•/‡∏ô‡∏±‡∏Å‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ô';
  if(total>=40){fac='‡∏ß‡∏¥‡∏®‡∏ß‡∏Å‡∏£‡∏£‡∏°‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå';career='‡∏ß‡∏¥‡∏®‡∏ß‡∏Å‡∏£‡∏£‡∏∞‡∏ö‡∏ö AI';}
  else if(total>=30){fac='‡πÅ‡∏û‡∏ó‡∏¢‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå';career='‡πÅ‡∏û‡∏ó‡∏¢‡πå‡πÄ‡∏ß‡∏ä‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå‡∏ü‡∏∑‡πâ‡∏ô‡∏ü‡∏π';}
  else if(total>=20){fac='‡∏ö‡∏£‡∏¥‡∏´‡∏≤‡∏£‡∏ò‡∏∏‡∏£‡∏Å‡∏¥‡∏à';career='‡∏ô‡∏±‡∏Å‡∏ß‡∏≤‡∏á‡πÅ‡∏ú‡∏ô‡∏Å‡∏•‡∏¢‡∏∏‡∏ó‡∏ò‡πå';}
  document.getElementById('scoreText').innerText = `‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô‡∏£‡∏ß‡∏°: ${total}`;
  document.getElementById('facultyText').innerText = `‡∏Ñ‡∏ì‡∏∞‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏°‡∏≤‡∏∞‡∏™‡∏°: ${fac}`;
  document.getElementById('careerText').innerText = `‡∏≠‡∏≤‡∏ä‡∏µ‡∏û‡∏ó‡∏µ‡πà‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥: ${career}`;
  localStorage.setItem('recommendedFac', fac);
}

// Show Inspiration
function showInspiration(){
  const fac = localStorage.getItem('recommendedFac')||'‡∏≠‡∏±‡∏Å‡∏©‡∏£‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå';
  const alum = alumniData[fac];
  document.getElementById('alumniImg').src = alum.img;
  document.getElementById('alumniName').innerText = alum.name;
  document.getElementById('alumniQuote').innerText = alum.quote;
}

// Chatbot
function sendChat(){
  const msg = document.getElementById('chatMsg').value.trim();
  if(!msg) return;
  addMsg(msg, 'user');
  document.getElementById('chatMsg').value = '';
  setTimeout(()=>processBot(msg), 500);
}

function addMsg(text, who){
  const div = document.createElement('div');
  div.className = `chat-msg ${who}`;
  div.innerText = text;
  document.getElementById('chatBox').appendChild(div);
  document.getElementById('chatBox').scrollTop = 1e9;
}

function processBot(input){
  const txt = input.toLowerCase();
  let reply = '‡∏Ç‡∏≠‡πÇ‡∏ó‡∏©‡∏Ñ‡πà‡∏∞ ‡∏â‡∏±‡∏ô‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏à‡∏Ñ‡∏≥‡∏ñ‡∏≤‡∏° ‡∏•‡∏≠‡∏á‡∏ñ‡∏≤‡∏°‡πÄ‡∏Å‡∏µ‡πà‡∏¢‡∏ß‡∏Å‡∏±‡∏ö "‡∏Ñ‡∏ì‡∏∞", "‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô", ‡∏´‡∏£‡∏∑‡∏≠ "‡∏™‡∏≠‡∏ö" ‡∏î‡∏π‡∏ô‡∏∞‡∏Ñ‡∏∞ üòä';
  const fac = localStorage.getItem('recommendedFac') || '‡∏≠‡∏±‡∏Å‡∏©‡∏£‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå';
  if(txt.includes('‡∏Ñ‡∏ì‡∏∞') || txt.includes('‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥')) reply = `‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥‡∏Ñ‡∏ì‡∏∞: ${fac} ‚Äî ${facultyInfo[fac]}`;
  else if(txt.includes('‡∏≠‡∏≤‡∏ä‡∏µ‡∏û')) {
    reply = {
      '‡∏ß‡∏¥‡∏®‡∏ß‡∏Å‡∏£‡∏£‡∏°‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå':'‡∏ß‡∏¥‡∏®‡∏ß‡∏Å‡∏£‡∏£‡∏∞‡∏ö‡∏ö AI',
      '‡πÅ‡∏û‡∏ó‡∏¢‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå':'‡πÅ‡∏û‡∏ó‡∏¢‡πå‡πÄ‡∏ß‡∏ä‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå‡∏ü‡∏∑‡πâ‡∏ô‡∏ü‡∏π',
      '‡∏ö‡∏£‡∏¥‡∏´‡∏≤‡∏£‡∏ò‡∏∏‡∏£‡∏Å‡∏¥‡∏à':'‡∏ô‡∏±‡∏Å‡∏ß‡∏≤‡∏á‡πÅ‡∏ú‡∏ô‡∏Å‡∏•‡∏¢‡∏∏‡∏ó‡∏ò‡πå',
      '‡∏≠‡∏±‡∏Å‡∏©‡∏£‡∏®‡∏≤‡∏™‡∏ï‡∏£‡πå':'‡∏ô‡∏±‡∏Å‡πÅ‡∏õ‡∏•/‡∏ô‡∏±‡∏Å‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ô'
    }[fac];
  }
  else if(txt.includes('‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô')){
    const total = localStorage.getItem('totalScore');
    reply = total ? `‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô‡∏£‡∏ß‡∏° ${total} ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô‡∏Ñ‡πà‡∏∞` : '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ó‡∏≥‡πÅ‡∏ö‡∏ö‡∏õ‡∏£‡∏∞‡πÄ‡∏°‡∏¥‡∏ô‡∏Å‡πà‡∏≠‡∏ô‡∏ô‡∏∞‡∏Ñ‡∏∞';
  }
  else if(txt.includes('‡∏™‡∏≠‡∏ö')) reply = '‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥‡πÉ‡∏´‡πâ‡∏Ñ‡∏∏‡∏ì‡∏ù‡∏∂‡∏Å‡∏ó‡∏≥‡∏Ç‡πâ‡∏≠‡∏™‡∏≠‡∏ö‡πÄ‡∏Å‡πà‡∏≤ ‡∏ß‡∏≤‡∏á‡πÅ‡∏ú‡∏ô‡∏•‡πà‡∏ß‡∏á‡∏´‡∏ô‡πâ‡∏≤ ‡πÅ‡∏•‡∏∞‡πÄ‡∏£‡∏µ‡∏¢‡∏ô‡∏£‡∏π‡πâ‡∏à‡∏∏‡∏î‡∏≠‡πà‡∏≠‡∏ô‡∏Ç‡∏≠‡∏á‡∏ï‡∏ô‡πÄ‡∏≠‡∏á‡∏Ñ‡πà‡∏∞ ‚ú®';
  addMsg(reply, 'bot');
