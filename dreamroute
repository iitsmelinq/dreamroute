// Contact form
function submitContact(e){
  e.preventDefault();
  const name = encodeURIComponent(document.getElementById('contactName').value);
  const ig = encodeURIComponent(document.getElementById('contactIG').value);
  const msg = encodeURIComponent(document.getElementById('contactMsg').value);
  const subject = encodeURIComponent(`‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡∏à‡∏≤‡∏Å ${name}`);
  const body = encodeURIComponent(`‡∏ä‡∏∑‡πà‡∏≠: ${name}\nIG: ${ig}\n\n‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°:\n${msg}`);
  window.location.href = `mailto:lalinanongwan@gmail.com?subject=${subject}&body=${body}`;
  alert('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏õ‡∏¥‡∏î‡πÇ‡∏õ‡∏£‡πÅ‡∏Å‡∏£‡∏°‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡πà‡∏∞ üíå');
}
